<div class="d-flex align-items-center justify-content-between">
  <h1>Twitter Accounts</h1>
  <%= button_to "Connect a twitter account ", "auth/twitter",method: :post, class: "btn btn-primary" %>
</div>
<% @twitter_accounts.each do |twitter|%>
  <div class = "d-flex align-items-center mb-4">
    <div class="me-4">
      <%= image_tag twitter.image, class: "rounded-circle" %>
      <%= link_to "@#{twitter.username}","https://twitter.com/#{twitter.username}",target: :_blank %>
    </div>
    <%= button_to "Disconnect", twitter, method: :delete, data: { confirm: "Are you sure?!"} %>
  </div>
<% end %>
