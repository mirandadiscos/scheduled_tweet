<h1>Schedule a tweet</h1>
<%= form_with model: @tweet do |f| %>
  <%= render "shared/form_errors", form: f %>
  <div class="mb-3">
    <%= f.label :twitter_account_id %>
    <%= f.collection_select :twitter_account_id, Current.user.twitter_accounts,
                            :id, :username, {},{class: "form-control"} %>
    <%= link_to "Connect your twitter Account","/auth/twitter",method: :post %>
  </div>
  <div class="mb-3">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="mb-3">
    <% f.label :publish_at %>
    <div class="form-control">
      <%= f.datetime_select :publish_at%>
    </div>
  </div>
  <%= f.button "Schedule",class:"btn btn-primary"%>
<% end %>
